@model HotelsApp.Models.InputModels.LocationInputModel

@{
    ViewData["Title"] = "Home Page";
}

<h4 id="page-title">Find nearest hotels!</h4>
<hr />

<div id="wrapper">
    <div id="map">
        <div style="width: 640px; height: 480px" id="mapContainer"></div>
        <p class="description">Click on the map to choose location.</p>
    </div>

    <div id="results">
        <div id="loading-image" class="loader" hidden></div>
        <div id="found-hotel">
        </div>
    </div>
</div>



<input id="lat" hidden />
<input id="lng" hidden />

<button id="submit-button" hidden>Get Property</button>



<script src="~/js/map.js"></script>
<script src="~/js/hotelInfo.js"></script>
<script src="~/js/booking.js"></script>